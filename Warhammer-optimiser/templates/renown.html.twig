{% extends 'base.html.twig' %}

{% block body %}
  <div style="display:flex; justify-content:center; margin-top:3rem; width:100%; height:220px;">
		<img style="width:400px; height:100%;" src="../asset/images/logo.jpeg" alt="logo"> 
	</div>
<h1 style="text-align:center;"> Renown abilities </h1>
<div style="display:flex; flex-direction:column; align-items:center;"> 
  <form class="form" action="" method="post">
  <div style="display:flex; gap:2rem;">
    <div style="display:flex; align-items:center; gap:1rem;">
        <select class="renown js-states form-control" id="renown" style="font-size:20px;width: 400px;height: 400px;" name="items[]" id="" multiple="multiple">
          {% for renown in renownabilities %}
          <option class="cost" value="{{renown.id}}">
              {{ renown.name }}    <p> cost = </p> <p class="value">{{renown.cost}}</p>
          </option>
          {% endfor %}
        </select>
    </div>
    <div style="margin-top: 2rem;">
       <h2 style="margin:0; font-size:20px;">total cost:</h2>
       <div style="display:flex; gap: 5px;">
       <p class="total" style="font-size:20px;"> 0 </p>  
       <p style="font-size:20px;"> /80</p>
       </div>
    </div>
  </div>
    <div style="display:flex; justify-content:center;">
      <button class="submit-button" style="width: 100px;height: 40px;border-radius: 15px; margin-top: 2rem;" type="submit">Validate</button>
    </div>
  </form>
</div>

{% endblock %}