{% extends 'base.html.twig' %}

{% block body %}
  <div style="display:flex; justify-content:center; margin-top:3rem; width:100%; height:220px;">
		<img style="width:400px; height:100%;" src="../asset/images/logo.jpeg" alt="logo"> 
	</div>
<h1 style="text-align:center;"> select all the renown stats for your build and validate </h1>
<div style="display:flex; flex-direction:column; align-items:center;"> 
  <form action="" method="post">
  <h2> Renown Abilities <h2>
    <div style="display:flex; align-items:center; gap:1rem;">
      <select style="font-size:20px;width: 300px;height: 125px;" name="items[]" id="" multiple>
        {% for renown in renownabilities %}
        <option class="cost" value="{{renown.id}}">
            {{ renown.name }}    <p> cost = </p> <p class="value">{{renown.cost}}</p>
        </option>
        {% endfor %}
      </select>

      <div style="display:flex; flex-direction:column; align-items:center;">
        <h2 style="margin:0; font-size:20px;">cout total</h2>
          <div style="display:flex;">
            <p class="total" style="font-size:20px;"> </p>   
            <p style="font-size:20px;">/80</p>
          </div>
      </div>
    </div>
    <div>
      <input style="width: 100px;height: 40px;border-radius: 15px; margin-top: 2rem;" type="submit"></input>
    </div>
  </form>
</div>
{% endblock %}