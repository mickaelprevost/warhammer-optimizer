{% extends "base.html.twig" %}

{% block body %}
<div style="display:flex; justify-content:center; margin-top:3rem; width:100%; height:220px;">
					<img style="width:400px; height:100%;" src="asset/images/logo.jpeg" alt="logo"> 
				</div>

<h1 style="text-align: center; margin-top:5rem;"> Select your realm </h1>
<div style="width: 100%; height:30vh; display:flex;justify-content:center; align-items:center; gap: 5rem;">
    <a class="faction-select" href="{{ path('app_order_races')}}">
    <div style="display:flex; flex-direction:column; width: 200px;height: 130px;display: flex;justify-content: center;align-items: center;border-radius: 15px;">
        <h2 style="color:blue; text-transform:uppercase;"> {{ order.name }}</h2>
        <div style="display: flex;gap: 1rem;width: 200px;height: 200px;justify-content: center;align-items: center;">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_Dwarf.png') }}" alt="">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_Empire.png') }}" alt="">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_HighElf.png') }}" alt="">
        </div>
    </div>
    </a>

    <a class="faction-select" href="{{ path('app_destruction_races')}}">
    <div style="display:flex; flex-direction:column; width: 200px;height: 130px;display: flex;justify-content: center;align-items: center;border-radius: 15px;">
        <h2 style="color:red; text-transform:uppercase;"> {{ destruction.name }}</h2>
        <div style="display: flex;gap: 1rem;width: 200px;height: 200px;justify-content: center;align-items: center;">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_Chaos.png') }}" alt="">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_DarkElf.png') }}" alt="">
        <img style="width: 60px;" src="{{ asset('asset/images/Icon_Greenskin.png') }}" alt="">
        </div>
    </div>
    </a>
</div>


{% endblock %}